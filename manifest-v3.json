{
  "manifest_version": 3,
  "name": "GitHub Contextual Merge Strategy",
  "version": "2.0.1",
  "description": "Defines a contextual merge strategy on GitHub pull requests according to the source branch.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "https://github.com/hookdeck/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "github-contextual-merge-strategy@hookdeck.com"
    }
  }
}
